<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app_autores.MainPage"
             Title="Biblioteca UTH Autores de libros ^-^"
             Background="#ffd7e3">
            
  
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="20">
            <Image
                Source="perfil.jpg"
                HeightRequest="185"
                Margin="25"
                Aspect="AspectFit"/>

            <Label
                Text="Nombre del Autor: " />
            <Entry x:Name="nombreEntry"/>

            <Label
                Text="Nacionalidad del autor: " />
            <Picker  x:Name="paisesPicker" Title="Seleccione una opcion: "/>

            <Button
                x:Name="BtnAgregar"
                Text="Agregar" 
                Clicked="OnAddAutorClicked"
                BackgroundColor="HotPink"
                FontAttributes="Bold"
               
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
